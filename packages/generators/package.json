{
  "name": "@codesuperman/project-generator",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "bin": {
    "project-generator": "./bin/cli.js",
    "pg": "./bin/cli.js"
  },
  "scripts": {
    "build": "npm run clean && tsc --build && npm run copy",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "copy": "cp -r ./src/templates ./dist",
    "check": "tsc --noEmit",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check src/**/*.ts",
    "format:fix": "prettier --write .",
    "release-it": "release-it"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.0",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.7.5",
    "commander": "^8.1.0",
    "consola": "^2.15.3",
    "release-it": "^14.11.5",
    "rimraf": "^3.0.2",
    "super-cli": "^1.0.1"
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "import-local": "^3.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
