    "@types/jsonfile": "6.0.1",
    "@types/lodash": "4.14.173",
    "@types/node": "16.7.5",
    "@types/prettier": "2.3.2",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "pg-cli": "^2.0.1",
    "pinst": "2.1.6",
    "prettier": "2.4.1",
    "release-it": "14.11.5",
    "rimraf": "3.0.2",
