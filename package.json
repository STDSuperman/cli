    "commander": "8.2.0",
    "consola": "2.15.3",
    "ejs": "3.1.6",
    "execa": "5.1.1",
    "fs-extra": "10.0.0",
    "import-local": "3.0.2",
    "jsonfile": "6.1.0",
    "lodash": "4.17.21",
    "tslib": "2.3.1"
  }
